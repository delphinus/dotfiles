{
  "title": "[delphinus] Custom shortcut for Google Spreadsheets",
  "rules": [
    {
      "description": "[delphinus] Use left_control+left_option+cv to cycle through sheets in web browser.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "c",
            "modifiers": {
              "mandatory": ["left_control", "left_option"]
            }
          },
          "to": [
            {
              "key_code": "page_up",
              "modifiers": ["fn", "left_command", "left_shift"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^org\\.mozilla\\.firefox$",
                "^com\\.google\\.Chrome$",
                "^com\\.apple\\.Safari$"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "v",
            "modifiers": {
              "mandatory": ["left_control", "left_option"]
            }
          },
          "to": [
            {
              "key_code": "page_down",
              "modifiers": ["fn", "left_command", "left_shift"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^org\\.mozilla\\.firefox$",
                "^com\\.google\\.Chrome$",
                "^com\\.apple\\.Safari$"
              ]
            }
          ]
        }
      ]
    }
  ]
}

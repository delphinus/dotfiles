{
  "title": "Custom shortcut for Contexts",
  "rules": [
    {
      "description": "Use Opt-Escape to Opt-Backtick",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "escape",
            "modifiers": {
              "mandatory": [
                "option"
              ]
            }
          },
          "to": [
            {
              "key_code": "grave_accent_and_tilde",
              "modifiers": [
                "option"
              ]
            }
          ]
        }
      ]
    }
  ]
}

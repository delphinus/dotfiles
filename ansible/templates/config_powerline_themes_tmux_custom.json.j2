{
	"segment_data": {
		"powerline.segments.common.wthr.weather": {
			"args": {
				"location_query": "tokyo, japan"
			}
		},
		"powerline.segments.common.mail.email_imap_alert": {
			"before": "  ",
			"args": {
				"username": "delphinus@remora.cx",
				"password": "{{ secret_google_password }}",
				"max_msgs": 50
			}
		},
		"cpu_load_percent": {
			"args": {
				"format": "  {0:4.1f}%"
			}
		},
		"used_memory_percent": {
			"args": {
				"format": "  {0:4.1f}%"
			}
		},
		"powerline.segments.common.bat.battery": {
			"args": {
				"gamify": true,
				"full_heart": "♥ ",
				"empty_heart": "♡ "
			}
		},
		"ext.tmux.segments.cool_battery.battery": {
			"args": {
				"iconfy": true,
				"online": "  ",
				"offline": "",
				"icon_format": "{0}   {1}"
			}
		},
		"powerline.segments.common.net.network_load": {
			"args": {
				"recv_max": 1000000,
				"sent_max": 1000000,
				"recv_format": "{value:>8}",
				"sent_format": " {value:>8}"
			}
		}
	},
	"segments": {
		"right": [
			{
				"function": "powerline.segments.common.net.network_load",
				"priority": 90
			},
			{
				"function": "powerline.segments.common.sys.cpu_load_percent",
				"priority": 80
			},
			{
				"function": "ext.tmux.segments.ps.used_memory_percent",
				"priority": 80
			},
{% if ansible_os_family == 'Darwin' and 'MacBook' in ansible_model %}
			{
				"function": "ext.tmux.segments.cool_battery.battery",
				"priority": 10
			},
{% endif %}
			{
				"function": "powerline.segments.common.wthr.weather",
				"priority": 90
			},
			{
				"function": "powerline.segments.common.sys.system_load",
				"priority": 80
			},
			{
				"function": "powerline.segments.common.sys.uptime",
				"priority": 90
			},
			{
				"function": "powerline.segments.common.mail.email_imap_alert",
				"priority": 90
			},
			{
				"function": "powerline.segments.common.time.date",
				"priority": 80
			},
			{
				"function": "powerline.segments.common.time.date",
				"args": {
					"format": "%H:%M",
					"istime": true
				},
				"priority": 70
			}
		]
	}
}{# vim:se ft=json.jinja: #}

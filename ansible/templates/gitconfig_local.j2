{% set ghe_hosts = lookup('env', 'GITHUB_ENTERPRISE_HOST') -%}
{% if ghe_hosts != '' -%}
{%   for item in ghe_hosts.split(',') -%}
[url "git@{{ item }}:"]
	insteadOf = https://{{ item }}/
[ghq "ssh://git@{{ item }}"]
	vcs = git
{%   endfor -%}
{% endif %}
{% for config in secret_git_configs %}
[includeIf "hasconfig:remote.*.url:**{{ config.host }}**"]
    path = {{ config.filename }}
{% endfor %}
{% if ansible_facts['os_family'] == 'Darwin' -%}
[gpg]
  format = ssh
[gpg "ssh"]
  program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign
[commit]
  gpgsign = true
{% endif -%}


[github]
    token = {{ secret_office.github_token.ghr }}
[url "{{ lookup('env', 'GITHUB_ENTERPRISE_PREFIX_SSH') }}"]
	insteadOf = {{ lookup('env', 'GITHUB_ENTERPRISE_PREFIX_HTTPS') }}
{%- for info in secret_repo_info_for_ghq -%}
[ghq "{{ info.url }}"]
	vcs = {{ info.vcs }}
{% endfor -%}
{%- if ansible_hostname in secret_office.hostnames %}
[hub]
	host = {{ secret_hub_host }}
{% endif %}
{%- for info in secret_includeif -%}
[includeIf "gitdir:{{ info.gitdir }}"]
    path = {{ info.path }}
{% endfor -%}


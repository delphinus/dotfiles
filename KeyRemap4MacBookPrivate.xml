<?xml version="1.0"?>
<root>
    <appdef>
        <appname>MACVIM</appname>
        <equal>org.vim.MacVim</equal>
    </appdef>
    <item>
        <name>Custom Keymaps</name>
        <list>
            <item>
                <name>C-TAB to C-Z, TAB (change window)</name>
                <identifier>remap.app_term_screen_tab</identifier>
                <only>TERMINAL</only>
                <autogen>--KeyToKey-- KeyCode::TAB, ModifierFlag::CONTROL_L, KeyCode::Z, ModifierFlag::CONTROL_L, KeyCode::TAB</autogen>
                <autogen>--KeyToKey-- KeyCode::TAB, ModifierFlag::CONTROL_R, KeyCode::Z, ModifierFlag::CONTROL_L, KeyCode::TAB</autogen>
            </item>
            <item>
                <name>D-123... to C-Z, 123... (switch window)</name>
                <identifier>remap.app_term_screen_num</identifier>
                <only>TERMINAL</only>
                <autogen>--KeyToKey-- KeyCode::KEY_0, ModifierFlag::COMMAND_L, KeyCode::Z, ModifierFlag::CONTROL_L, KeyCode::KEY_0</autogen>
                <autogen>--KeyToKey-- KeyCode::KEY_1, ModifierFlag::COMMAND_L, KeyCode::Z, ModifierFlag::CONTROL_L, KeyCode::KEY_1</autogen>
                <autogen>--KeyToKey-- KeyCode::KEY_2, ModifierFlag::COMMAND_L, KeyCode::Z, ModifierFlag::CONTROL_L, KeyCode::KEY_2</autogen>
                <autogen>--KeyToKey-- KeyCode::KEY_3, ModifierFlag::COMMAND_L, KeyCode::Z, ModifierFlag::CONTROL_L, KeyCode::KEY_3</autogen>
                <autogen>--KeyToKey-- KeyCode::KEY_4, ModifierFlag::COMMAND_L, KeyCode::Z, ModifierFlag::CONTROL_L, KeyCode::KEY_4</autogen>
                <autogen>--KeyToKey-- KeyCode::KEY_5, ModifierFlag::COMMAND_L, KeyCode::Z, ModifierFlag::CONTROL_L, KeyCode::KEY_5</autogen>
                <autogen>--KeyToKey-- KeyCode::KEY_6, ModifierFlag::COMMAND_L, KeyCode::Z, ModifierFlag::CONTROL_L, KeyCode::KEY_6</autogen>
                <autogen>--KeyToKey-- KeyCode::KEY_7, ModifierFlag::COMMAND_L, KeyCode::Z, ModifierFlag::CONTROL_L, KeyCode::KEY_7</autogen>
                <autogen>--KeyToKey-- KeyCode::KEY_8, ModifierFlag::COMMAND_L, KeyCode::Z, ModifierFlag::CONTROL_L, KeyCode::KEY_8</autogen>
                <autogen>--KeyToKey-- KeyCode::KEY_9, ModifierFlag::COMMAND_L, KeyCode::Z, ModifierFlag::CONTROL_L, KeyCode::KEY_9</autogen>
            </item>
            <item>
                <name>ESC, C-[, ` to ESC + IME off (for terminal)</name>
                <identifier>remap.app_term_ime_off_esc</identifier>
                <only>TERMINAL</only>
                <autogen>--KeyToKey-- KeyCode::ESCAPE, KeyCode::JIS_EISUU, KeyCode::ESCAPE</autogen>
                <autogen>--KeyToKey-- KeyCode::BRACKET_LEFT, ModifierFlag::CONTROL_L, KeyCode::JIS_EISUU, KeyCode::ESCAPE</autogen>
                <autogen>--KeyToKey-- KeyCode::BACKQUOTE, KeyCode::JIS_EISUU, KeyCode::ESCAPE</autogen>
            </item>
            <item>
                <name>ESC, C-[ to ESC + IME off (for terminal)</name>
                <identifier>remap.app_term_ime_off_esc_except_backquote</identifier>
                <only>TERMINAL</only>
                <autogen>--KeyToKey-- KeyCode::ESCAPE, KeyCode::JIS_EISUU, KeyCode::ESCAPE</autogen>
                <autogen>--KeyToKey-- KeyCode::BRACKET_LEFT, ModifierFlag::CONTROL_L, KeyCode::JIS_EISUU, KeyCode::ESCAPE</autogen>
            </item>
            <item>
                <name>Double Shift_R to CapsLock</name>
                <identifier>remap.double_right_shift_to_capslock</identifier>
                <autogen>--DoublePressModifier-- KeyCode::SHIFT_R, KeyCode::SHIFT_R, KeyCode::CAPSLOCK</autogen>
            </item>
            <item>
                <name>Shift_L to Shift_L</name>
                <appendix>(+ When you type Shift_L only, send JIS_KANA)</appendix>
                <identifier>remap.shiftL2shiftL_jis_kana</identifier>
                <autogen>--KeyOverlaidModifier-- KeyCode::SHIFT_L, KeyCode::SHIFT_L, KeyCode::JIS_KANA</autogen>
            </item>
            <item>
                <name>Shift_R to Shift_R</name>
                <appendix>(+ When you type Shift_R only, send C-JIS_KANA x 2)</appendix>
                <identifier>remap.shiftR2shiftR_c_jis_kana</identifier>
                <autogen>--KeyOverlaidModifier-- KeyCode::SHIFT_R, KeyCode::SHIFT_R, KeyCode::JIS_KANA, ModifierFlag::CONTROL_L, KeyCode::JIS_KANA, ModifierFlag::CONTROL_L</autogen>
            </item>
            <item>
                <name>Esc, C-[, ` to ESC + IME off (for MacVim)</name>
                <identifier>remap.app_macvim_ime_off_esc</identifier>
                <only>MACVIM</only>
                <autogen>--KeyToKey-- KeyCode::ESCAPE, KeyCode::JIS_EISUU, KeyCode::ESCAPE</autogen>
                <autogen>--KeyToKey-- KeyCode::BRACKET_LEFT, ModifierFlag::CONTROL_L, KeyCode::JIS_EISUU, KeyCode::ESCAPE</autogen>
                <autogen>--KeyToKey-- KeyCode::BACKQUOTE, KeyCode::JIS_EISUU, KeyCode::ESCAPE</autogen>
            </item>
            <item>
                <name>Esc, C-[ to ESC + IME off (for MacVim)</name>
                <identifier>remap.app_macvim_ime_off_esc_except_backquote</identifier>
                <only>MACVIM</only>
                <autogen>--KeyToKey-- KeyCode::ESCAPE, KeyCode::JIS_EISUU, KeyCode::ESCAPE</autogen>
                <autogen>--KeyToKey-- KeyCode::BRACKET_LEFT, ModifierFlag::CONTROL_L, KeyCode::JIS_EISUU, KeyCode::ESCAPE</autogen>
            </item>
        </list>
    </item>
</root>
